{
  "name": "ABYK - Next.js Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  
  // Features to install
  "features": {
   "features": {
     "ghcr.io/devcontainers-extra/features/pnpm:1": {
       "version": "latest"
     }
    "ghcr.io/devcontainers-extra/features/pnpm:1": {
      "version": "latest"
    }
  },

  // Commands to run after container creation
  "postCreateCommand": "pnpm install",

  // VS Code extensions to install automatically
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-typescript-next",
        "usernamehw.errorlens",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "tailwindCSS.experimental.classRegex": [
          ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
          ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
        ],
        // Mobile-friendly settings
        "editor.fontSize": 14,
        "editor.minimap.enabled": false,
        "workbench.tree.indent": 20,
        "breadcrumbs.enabled": true
      }
    }
  },

  // Forward ports for dev server
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    }
  },

  // Use 'postAttachCommand' to run commands after the container is running
  "postAttachCommand": "echo 'ðŸš€ Ready to code! Run: pnpm dev'",

  // Environment variables
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
