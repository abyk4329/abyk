---
import ShareButton from '../components/ShareButton';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="יצירת קשר - Awakening by Ksenia"
  description="יצירת קשר עם קסניה - הזמינו ייעוץ אישי בנומרולוגיה וקוד העושר"
>
  <div class="page-container contact-page">
    <h1 class="PageTitle">יצירת קשר</h1>
    <p class="LeadText">הצטרפו אליי ברשתות החברתיות ושתפו עם חברים ומשפחה</p>
    
    <!-- Share Button -->
    <section class="contact-share">
  <div class="card-surface card-stack contact-card contact-card--share">
        <ShareButton client:load title="Awakening by Ksenia" text="הצטרפו אליי ברשתות החברתיות" />
      </div>
    </section>

    <!-- Social Links -->
    <section class="contact-links">
      <div class="contact-grid">
        <a 
          href="https://www.instagram.com/awakening.by.ksenia/" 
          target="_blank"
          rel="noopener noreferrer"
          class="card-surface card-stack contact-card contact-card--link contact-card--instagram"
          aria-label="Instagram"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
          </svg>
          <span class="social-label">Instagram</span>
          <span class="social-description">עקבו אחריי באינסטגרם</span>
        </a>
        
        <a 
          href="https://www.tiktok.com/@awakening.by.ksenia" 
          target="_blank"
          rel="noopener noreferrer"
          class="card-surface card-stack contact-card contact-card--link contact-card--tiktok"
          aria-label="TikTok"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"/>
          </svg>
          <span class="social-label">TikTok</span>
          <span class="social-description">הצטרפו אליי בטיקטוק</span>
        </a>
        
        <a 
          href="https://wa.me/972524616121" 
          target="_blank"
          rel="noopener noreferrer"
          class="card-surface card-stack contact-card contact-card--link contact-card--whatsapp"
          aria-label="WhatsApp"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"/>
            <path d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"/>
          </svg>
          <span class="social-label">WhatsApp</span>
          <span class="social-description">שלחו לי הודעה בוואטסאפ</span>
        </a>
        
        <a 
          href="mailto:awakening.by.ksenia@gmail.com"
          class="card-surface card-stack contact-card contact-card--link contact-card--email"
          aria-label="Email"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          <span class="social-label">Email</span>
          <span class="social-description">שלחו לי אימייל</span>
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .contact-page {
    display: flex;
    flex-direction: column;
    gap: var(--card-section-gap-small);
    text-align: center;
  }

  .contact-share {
    display: flex;
    justify-content: center;
  }

  .contact-card {
    align-items: center;
    text-align: center;
    gap: var(--card-content-gap);
  }

  .contact-card--share {
    max-width: 600px;
    width: 100%;
  }

  .contact-links {
    display: flex;
    justify-content: center;
  }

  .contact-grid {
    display: grid;
    gap: var(--card-section-gap-small);
    width: 100%;
    max-width: 800px;
  }

  .contact-card--link {
    color: rgb(var(--color-text));
    text-decoration: none;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .contact-card--link svg {
    color: rgb(var(--color-icon));
    stroke: currentColor;
  }

  .social-label {
    font-size: var(--text-lg);
    font-weight: 600;
    color: rgb(var(--color-heading));
  }

  .social-description {
    font-size: var(--text-sm);
    font-weight: 400;
    color: rgb(var(--color-text));
    opacity: 0.8;
  }

  .contact-card--link:active {
    transform: scale(0.98);
  }

  @media (min-width: 768px) {
    .contact-page {
      gap: var(--card-section-gap-large);
    }

    .contact-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: var(--card-section-gap-large);
    }

    .contact-card--link:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    }
  }
</style>