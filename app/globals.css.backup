/* Tailwind v4 - Single import replaces the three @tailwind directives */

@import "tailwindcss";

/* Import Design System */
@import "../design/index.css";

/* Import Neumorphic Shadow System */
@import "./components/neu/neumorphic-shadows.css";

/* Tailwind v4: enable the dark: variant to use .dark class */
@variant dark (&:where(.dark, .dark *));

/* Tailwind v4: theme color & radius tokens so utilities like bg-background/text-foreground/border-border work */
@theme {
  --color-background: var(--background);
  --color-foreground: var(--foreground);

  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);

  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);

  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);

  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);

  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);

  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);

  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);

  --color-border: var(--border);
  --color-input: var(--input);
  --color-input-background: var(--input-background);
  --color-switch-background: var(--switch-background);
  --color-ring: var(--ring);

  /* Charts */
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);

  /* Derived radii for utilities like rounded-[--radius-lg] */
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);

  /* Sidebar */
  --color-sidebar: var(--sidebar);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

/* ============================================
   CSS Variables - Color Palette & Tokens
   ============================================ */
:root {
  /* Typography */
  --font-size: 16px;
  --font-family: var(--font-assistant, "Assistant", sans-serif);
  --heading-line-height-tight: 0.9;

  --heading-h1-mobile-min: 1.6rem; /* 25.6px */
  --heading-h1-mobile-max: 1.8125rem; /* 29px */
  --heading-h1-desktop: 3rem; /* 48px */
  --heading-h1-size: clamp(
    var(--heading-h1-mobile-min),
    calc(1.05rem + 3vw),
    var(--heading-h1-mobile-max)
  );
  --heading-h1-weight: 700;
  --heading-h1-line-height: var(--heading-line-height-tight);

  --heading-h2-mobile-min: 1.375rem; /* 22px */
  --heading-h2-mobile-max: 1.625rem; /* 26px */
  --heading-h2-desktop: 2.5rem; /* 40px */
  --heading-h2-size: clamp(
    var(--heading-h2-mobile-min),
    calc(1rem + 2.4vw),
    var(--heading-h2-mobile-max)
  );
  --heading-h2-weight: 700;

  --heading-h3-mobile-min: 1.125rem; /* 18px */
  --heading-h3-mobile-max: 1.375rem; /* 22px */
  --heading-h3-desktop: 2rem; /* 32px */
  --heading-h3-size: clamp(
    var(--heading-h3-mobile-min),
    calc(0.95rem + 1.8vw),
    var(--heading-h3-mobile-max)
  );
  --heading-h3-weight: 600;
  --heading-primary-color-light: var(--color-text-900);
  --heading-primary-color: var(--heading-primary-color-light);
  --heading-h1-color: var(--heading-primary-color);
  --heading-h2-color: var(--heading-primary-color);
  --heading-h3-color: var(--heading-primary-color);

  --heading-subtitle-mobile-min: 1.125rem;
  --heading-subtitle-mobile-max: 1.3125rem;
  --heading-subtitle-desktop: 1.5rem;
  --heading-subtitle-size: clamp(
    var(--heading-subtitle-mobile-min),
    calc(0.95rem + 1vw),
    var(--heading-subtitle-desktop)
  );
  --heading-subtitle-weight: 700;
  --heading-subtitle-line-height: 1.24;
  --heading-subtitle-color: color-mix(
    in srgb,
    var(--neu-gold-signature) 82%,
    var(--neu-base)
  );

  --paragraph-color: var(--neu-text-secondary);
  --caption-color: var(--neu-text-tertiary);

  --paragraph-base-size: clamp(1rem, 2.4vw, 1.1rem);
  --paragraph-base-line-height: 1.3;
  --paragraph-tight-size: var(--paragraph-base-size);
  --paragraph-tight-line-height: var(--paragraph-base-line-height);

  /* Neumorphic palette - light mode (default) */
  --neu-base: var(--color-surface-100);
  --neu-card: var(--color-surface-100);
  --neu-shadow-light: rgba(255, 255, 255, 1);
  --neu-shadow-dark: rgba(160, 160, 160, 0.5);
  --neu-text-primary: var(--color-text-900);
  --neu-text-secondary: var(--color-text-700);
  --neu-text-tertiary: var(--color-text-500);
  --neu-text-quaternary: rgba(94, 73, 52, 0.65);
  --neu-gold-signature: var(--color-accent-500);
  --neu-accent: var(--neu-gold-signature);
  --neu-accent-light: color-mix(
    in srgb,
    var(--neu-gold-signature) 82%,
    var(--neu-base)
  );
  --neu-accent-dark: color-mix(
    in srgb,
    var(--neu-gold-signature) 70%,
    var(--neu-text-primary)
  );
  --neu-accent-bright: color-mix(
    in srgb,
    var(--neu-gold-signature) 88%,
    var(--neu-base)
  ); /* זהב עיקרי */
  --neu-cta-press: var(--color-accent-700);
  --neu-icon: var(--neu-accent);

  /* Core palette bindings */
  --background: var(--neu-base);
  --foreground: var(--neu-text-primary);
  --card: var(--neu-card);
  --card-foreground: var(--foreground);
  --popover: var(--card);
  --popover-foreground: var(--foreground);
  --primary: var(--neu-accent);
  --primary-foreground: var(--primary-foreground);
  --secondary: var(--neu-card);
  --secondary-foreground: var(--neu-accent);
  --muted: color-mix(in srgb, var(--neu-gold-signature) 24%, transparent);
  --muted-foreground: var(--neu-text-secondary);
  --accent: var(--primary);
  --accent-foreground: var(--primary-foreground);
  --on-accent: var(--primary-foreground);
  --destructive: var(--color-danger-500);
  --destructive-foreground: var(--color-danger-100);
  --border: rgba(160, 160, 160, 0.25);
  --input: transparent;
  --input-background: var(--card);
  --switch-background: var(--card);
  --ring: var(--neu-accent-light);

  /* Text palette */
  --text-primary: var(--neu-text-primary);
  --text-secondary: var(--neu-text-secondary);
  --text-tertiary: var(--neu-text-tertiary);
  --text-quaternary: var(--neu-text-quaternary);

  /* Neumorphic shadows */
  --shadow-light: var(--neu-shadow-light);
  --shadow-dark: var(--neu-shadow-dark);
  --shadow-raised: 2px 2px 4px var(--shadow-dark),
    -2px -2px 4px var(--shadow-light);
  --shadow-raised-hover: 2px 2px 4px
      color-mix(in srgb, var(--shadow-dark) 60%, transparent),
    -2px -2px 4px color-mix(in srgb, var(--shadow-light) 60%, transparent);
  --shadow-raised-strong: 2px 2px 4px
      color-mix(in srgb, var(--shadow-dark) 65%, transparent),
    -2px -2px 4px color-mix(in srgb, var(--shadow-light) 65%, transparent);
  --shadow-raised-emphasis: 2px 2px 4px
      color-mix(in srgb, var(--shadow-dark) 70%, transparent),
    -2px -2px 4px color-mix(in srgb, var(--shadow-light) 70%, transparent);
  --shadow-inset: inset 3px 3px 6px var(--shadow-dark),
    inset -3px -3px 6px var(--shadow-light);
  --shadow-inset-hover: inset 3px 3px 6px
      color-mix(in srgb, var(--shadow-dark) 60%, transparent),
    inset -3px -3px 6px color-mix(in srgb, var(--shadow-light) 60%, transparent);
  --shadow-inset-strong: inset 3px 3px 6px
      color-mix(in srgb, var(--shadow-dark) 65%, transparent),
    inset -3px -3px 6px color-mix(in srgb, var(--shadow-light) 65%, transparent);
  --shadow-inset-pressed: inset 3px 3px 6px
      color-mix(in srgb, var(--shadow-dark) 55%, transparent),
    inset -3px -3px 6px color-mix(in srgb, var(--shadow-light) 55%, transparent);
  --shadow-overlay-sm: 0 6px 16px
    color-mix(in srgb, var(--shadow-dark) 35%, transparent);
  --shadow-overlay: 0 10px 26px
    color-mix(in srgb, var(--shadow-dark) 45%, transparent);
  --shadow-highlight: inset 0 1px 3px rgba(255, 255, 255, 0.18);

  /* Lift effect */
  --lift-text-shadow: 0 1px 1.4px
    color-mix(in srgb, var(--shadow-dark) 24%, transparent);
  --lift-text-shadow-md: 0 2px 4px
    color-mix(in srgb, var(--shadow-dark) 28%, transparent);
  --lift-text-shadow-lg: 0 3px 6px
    color-mix(in srgb, var(--shadow-dark) 35%, transparent);
  --lift-icon-shadow: 0 1.5px 2px
    color-mix(in srgb, var(--shadow-dark) 18%, transparent);

  /* Legacy token compatibility */
  --brown-dark: var(--neu-text-primary);
  --brown-heading: var(--neu-text-secondary);
  --brown-bronze: var(--neu-text-tertiary);
  --brown-neutral: var(--neu-text-quaternary);
  --sand-light: rgba(160, 160, 160, 0.35);
  --sand-lighter: rgba(255, 255, 255, 0.8);
  --beige-lightest: var(--neu-base);
  --white-cream: var(--neu-base);

  /* Layout */
  --header-surface: var(--card);
  --header-surface-strong: var(--card);
  --status-bar-dark: var(--color-surface-900);
  --bg-start: var(--header-surface);
  --bg-end: var(--header-surface-strong);
  --page-gradient: none;
  --header-height: 56px;
  --overlay-scrim: rgba(0, 0, 0, 0.25);
  --overlay-glass-scrim: color-mix(
    in srgb,
    var(--neu-text-quaternary) 8%,
    transparent
  );
  --overlay-glass-blur: 22px;
  --surface-glass: color-mix(in srgb, var(--neu-card) 82%, transparent);
  --surface-glass-border: color-mix(
    in srgb,
    var(--neu-text-quaternary) 22%,
    transparent
  );
  --surface-glass-shadow: none;
  --surface-glass-blur: 18px;
  --z-cookie: 110;
  --z-overlay: 120;
  --z-rail: 125;
  --z-drawer: 130;
  --z-header: 140;
  --z-hero: 160;
  --z-hero: 160;

  /* Spacing scale (mobile-first) */
  --space-1: 0.5rem; /* 8px */
  --space-1-5: 0.75rem; /* 12px */
  --space-2: 1rem; /* 16px */
  --space-3: 1.5rem; /* 24px */
  --space-4: 2rem; /* 32px */
  --space-5: 2.5rem; /* 40px */
  --space-6: 3rem; /* 48px */

  /* Card layout spacing */
  --card-stack-gap: clamp(var(--space-2), 3.5vw, var(--space-3));
  --card-text-gap: clamp(var(--space-1-5), 2.8vw, var(--space-2));

  --heading-paragraph-gap: 1.2rem;
  --card-padding-base: clamp(
    var(--space-2),
    5vw,
    calc(var(--space-3) + var(--space-1))
  );
  --card-padding-desktop: clamp(
    calc(var(--space-2) + var(--space-1)),
    4.5vw,
    calc(var(--space-3) + var(--space-1-5))
  );

  --card-notch-size: clamp(3.25rem, 9vw, 3.5rem);
  --card-notch-size-sm: clamp(3rem, 8vw, var(--card-notch-size));
  --card-notch-radius: clamp(0.9rem, 3vw, 1.2rem);

  --card-icon-lg-size: var(--card-notch-size);
  --card-icon-lg-radius: var(--card-notch-radius);
  --card-icon-sm-size: var(--card-notch-size-sm);
  --card-icon-sm-radius: var(--card-notch-radius);

  --button-height: clamp(48px, 12vw, 56px);
  --button-padding-inline: 4px;
  --button-padding-block: 4px;
  --button-gap: 0.75rem;
  --button-min-width-desktop: clamp(12rem, 18vw, 14rem);
  --button-radius: clamp(24px, 8vw, 32px);
  --button-font-size: 1.125rem; /* 18px */
  --button-letter-spacing: 1px;
  --icon-well-secondary-size: clamp(3rem, 8vw, 3.5rem);
  --icon-well-primary-size: calc(var(--icon-well-secondary-size) * 1.5);
  --icon-well-radius-primary: 1.125rem;
  --icon-well-radius-secondary: 0.875rem;
  --icon-well-radius: var(--icon-well-radius-secondary);
  --icon-well-icon-scale: 0.69;
  --icon-well-icon-scale-secondary: 0.6;

  --secondary-card-max-width: clamp(360px, 72vw, 520px);
  --secondary-card-width: min(var(--secondary-card-max-width), 100%);

  /* Primary card sizing (mobile-first) */
  --primary-card-max-width: 880px;
  --primary-card-gutter: clamp(1rem, 4.5vw, 2.5rem);
  --primary-card-padding-block: clamp(2.25rem, 8vw, 3.75rem);
  --primary-card-width: min(var(--primary-card-max-width), 100%);

  /* Charts */
  --chart-1: oklch(0.646 0.222 41.116);
  --chart-2: oklch(0.6 0.118 184.704);
  --chart-3: oklch(0.398 0.07 227.392);
  --chart-4: oklch(0.828 0.189 84.429);
  --chart-5: oklch(0.769 0.188 70.08);

  /* Radius */
  --radius: 1rem;

  /* Sidebar */
  --sidebar: var(--neu-card);
  --sidebar-foreground: var(--neu-text-primary);
  --sidebar-primary: var(--neu-accent);
  --sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --sidebar-accent: rgba(201, 168, 130, 0.18);
  --sidebar-accent-foreground: var(--neu-text-secondary);
  --sidebar-border: rgba(160, 160, 160, 0.2);
  --sidebar-ring: var(--neu-accent-light);

  /* Font Weights */
  --font-weight-medium: 500;
  --font-weight-normal: 400;
}

@media (min-width: 768px) {
  :root {
    --heading-h1-size: clamp(
      2.5rem,
      calc(1.6rem + 2vw),
      var(--heading-h1-desktop)
    );
    --heading-h2-size: clamp(
      2rem,
      calc(1.35rem + 1.6vw),
      var(--heading-h2-desktop)
    );
    --heading-h3-size: clamp(
      1.5rem,
      calc(1.15rem + 1.1vw),
      var(--heading-h3-desktop)
    );
  }
}

[data-theme="dark"] {
  --overlay-glass-scrim: color-mix(
    in srgb,
    var(--status-bar-dark) 26%,
    transparent
  );
  --surface-glass: color-mix(in srgb, var(--status-bar-dark) 72%, transparent);
  --surface-glass-border: color-mix(
    in srgb,
    var(--neu-accent-light) 18%,
    transparent
  );
  --heading-primary-color: var(--neu-text-primary);
}

@media (min-width: 768px) {
  :root {
    --primary-card-max-width: 960px;
    --primary-card-gutter: clamp(1.25rem, 3.5vw, 2.5rem);
    --primary-card-padding-block: clamp(2.5rem, 6vw, 4rem);
    --primary-card-width: min(
      var(--primary-card-max-width),
      calc(100% - 2 * var(--primary-card-gutter))
    );
  }
}

@media (min-width: 1280px) {
  :root {
    --primary-card-max-width: 1040px;
    --primary-card-gutter: clamp(1.75rem, 3vw, 3rem);
    --primary-card-padding-block: clamp(2.75rem, 5vw, 4.25rem);
    --primary-card-width: min(
      var(--primary-card-max-width),
      calc(100% - 2 * var(--primary-card-gutter))
    );
  }
}

