/* ============================================
   CSS Resets & Global Styles
   ============================================ */
@layer base {
  /* Adding universal box-sizing to prevent layout issues on the left side
     Ensure that all elements inherit correct sizing so nothing gets cut off */
  html {
    box-sizing: border-box;
  }
  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  html {
    font-size: var(--font-size);
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100dvh;
    height: 100%;
    overflow-x: hidden;
    overscroll-behavior: none;
    background-color: var(--background);
    background-image: none;
  }

  body {
    position: relative;
    color: var(--color-foreground);
    font-family: var(--font-family);
    line-height: 1.1;
    text-align: center;
    direction: rtl;
    text-shadow: var(--lift-text-shadow);
  }
  svg {
    filter: drop-shadow(var(--lift-icon-shadow));
    transition: filter 160ms ease;
  }

  svg[data-lift="off"],
  [data-lift="off"] svg {
    filter: none !important;
  }

  [data-lift="off"] {
    text-shadow: none !important;
  }

  #__next,
  body > div {
    min-height: 100dvh;
    width: 100%;
    isolation: isolate;
    background-color: transparent;
  }

  ::placeholder {
    color: var(--text-tertiary);
    opacity: 0.7;
  }

  html.no-scroll {
    overflow: hidden;
    height: 100dvh;
    overscroll-behavior: none;
  }

  body.no-scroll {
    overflow: hidden;
    height: 100dvh;
    position: relative;
  }

  html.drawer-locked {
    overflow: hidden;
    overscroll-behavior: contain;
  }

  body.drawer-locked {
    overflow: hidden;
    overscroll-behavior: contain;
    touch-action: none;
    position: relative;
  }

  /* Hero shell for home, calculator, result, thank-you pages */
  .hero-shell {
    /* Fill the entire viewport while accounting for safe areas; padding stays within border-box */
    min-height: 100vh;
    min-height: 100svh;
    min-height: calc(
      100dvh - env(safe-area-inset-top) - env(safe-area-inset-bottom)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block-start: calc(
      var(
          --page-shell-padding-top,
          var(--header-height) + env(safe-area-inset-top)
        ) + var(--page-shell-content-gap-top, clamp(0.75rem, 2.5vw, 2rem))
    );
    padding-block-end: calc(
      env(safe-area-inset-bottom) +
        var(--page-shell-content-gap-bottom, clamp(1.5rem, 5vh, 4rem))
    );
    padding-inline-start: calc(
      env(safe-area-inset-right) +
        var(--page-shell-content-gap-inline, clamp(1rem, 4vw, 2.5rem))
    );
    padding-inline-end: calc(
      env(safe-area-inset-left) +
        var(--page-shell-content-gap-inline, clamp(1rem, 4vw, 2.5rem))
    );
    width: 100%;
    flex: 1 1 auto;
    position: relative;
  z-index: var(--z-hero, 160);
    isolation: isolate;
    background-color: transparent;
    background-image: none;
  }

  /* ==============================================
     Hero Card Vertical Positioning
     ----------------------------------------------
     We define two elevation groups using CSS vars:
       --hero-offset-group-a : Home / Calculator / Result (slightly higher)
       --hero-offset-group-b : Sales / Interpretations / ThankYou / Terms
     Mobile gets a slightly larger negative translate for better visual centering.
  =============================================== */
  :root {
    /* Responsive elevation using spacing tokens to avoid overshooting on tall viewports */
    --hero-offset-group-a: calc(
      -1 * clamp(var(--space-4), 8vh, calc(var(--space-6) + var(--space-1)))
    );
    --hero-offset-group-b: calc(
      -1 * clamp(var(--space-3), 6vh, var(--space-5))
    );
    --hero-offset-group-a-mobile: calc(
      -1 * clamp(var(--space-4), 11vh, calc(var(--space-6) + var(--space-1)))
    );
    --hero-offset-group-b-mobile: calc(
      -1 * clamp(var(--space-3), 9vh, var(--space-5))
    );
  }

  /* Base hero card positioning handled via data attribute */
  [data-hero-group="a"] {
    transform: translateY(var(--hero-offset-group-a));
  }
  [data-hero-group="b"] {
    transform: translateY(var(--hero-offset-group-b));
  }

  @media (max-width: 640px) {
    [data-hero-group="a"] {
      transform: translateY(var(--hero-offset-group-a-mobile));
    }
    [data-hero-group="b"] {
      transform: translateY(var(--hero-offset-group-b-mobile));
    }
  }

  @media (max-width: 768px) {
    [data-hero-group="a"],
    .hero-shell [data-hero-group="a"],
    [data-hero-group="b"],
    .hero-shell [data-hero-group="b"] {
      transform: translateY(0);
    }

    .hero-shell {
      align-items: flex-start;
      justify-content: flex-start;
    }
  }

  @media (max-height: 740px) {
    .app-shell[data-route="/"] main.app-main,
    .app-shell[data-route="/wealth-code"] main.app-main,
    .app-shell[data-route="/wealth-code/calculator"] main.app-main,
    .app-shell[data-route="/wealth-code/result"] main.app-main,
    .app-shell[data-route="/wealth-code/thank-you"] main.app-main,
    .app-shell[data-route="/calculator"] main.app-main,
    .app-shell[data-route="/result"] main.app-main,
    .app-shell[data-route="/thank-you"] main.app-main {
      overflow-y: auto;
      overflow-x: hidden;
      justify-content: flex-start;
    }

    .hero-shell {
      align-items: flex-start;
      justify-content: flex-start;
    }

    [data-hero-group="a"],
    .hero-shell [data-hero-group="a"],
    [data-hero-group="b"],
    .hero-shell [data-hero-group="b"] {
      transform: translateY(0);
    }
  }

  /* Full-screen no-scroll container adjustments handled via main.app-main overrides below */

  .app-shell[data-route="/terms"],
  .app-shell[data-route="/privacy"] {
    padding-left: max(env(safe-area-inset-left), 0px);
    padding-right: max(env(safe-area-inset-right), 0px);
  }

  .app-shell[data-route="/"] main.app-main,
  .app-shell[data-route="/wealth-code"] main.app-main,
  .app-shell[data-route="/wealth-code/calculator"] main.app-main,
  .app-shell[data-route="/wealth-code/result"] main.app-main,
  .app-shell[data-route="/wealth-code/thank-you"] main.app-main,
  .app-shell[data-route="/calculator"] main.app-main,
  .app-shell[data-route="/result"] main.app-main,
  .app-shell[data-route="/thank-you"] main.app-main {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: calc(
      100dvh - var(--header-height) - env(safe-area-inset-top) -
        env(safe-area-inset-bottom)
    );
    overflow-y: auto;
    overflow-x: hidden;
    padding-top: 0;
    --page-shell-padding-top: calc(env(safe-area-inset-top));
    padding-bottom: env(safe-area-inset-bottom);
    gap: 0;
  }

  .no-scroll-section {
    --no-scroll-padding: clamp(1.25rem, 5vw, 2.75rem);
    width: 100%;
    max-width: 100%;
    height: 100%;
    min-height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--no-scroll-padding);
    overflow: visible;
    box-sizing: border-box;
  }

  /* (Removed duplicate hero-shell block; consolidated above) */

  .safe-top {
    width: 100%;
    height: env(safe-area-inset-top);
    min-height: env(safe-area-inset-top);
    background: var(--page-surface, var(--header-surface));
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 49;
    pointer-events: none;
  }

  .safe-bottom {
    width: 100%;
    height: env(safe-area-inset-bottom);
    min-height: env(safe-area-inset-bottom);
    background: var(--page-surface, var(--header-surface));
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 39;
    pointer-events: none;
  }

  /* Set a default border color without relying on v4 tokens */
  *,
  *::before,
  *::after {
    border-color: var(--border);
  }
}

/* ============================================
   Typography - Mobile First Responsive
   ============================================ */
@layer base {
  /* Headings & Body - Mobile-first XS baseline */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    font-family: "Assistant", sans-serif;
    line-height: 1.05;
    letter-spacing: 0;
    transform: translateZ(0);
  }

  h1 {
    font-weight: var(--heading-h1-weight);
    font-size: var(--heading-h1-size);
    line-height: var(--heading-h1-line-height);
    letter-spacing: -0.03em;
    color: var(--text-secondary);
  }

  h2 {
    font-weight: var(--heading-h2-weight);
    font-size: var(--heading-h2-size);
    line-height: var(--heading-line-height-tight);
    letter-spacing: -0.02em;
    color: var(--text-tertiary);
  }

  h3 {
    font-weight: var(--heading-h3-weight);
    font-size: var(--heading-h3-size);
    line-height: var(--heading-line-height-tight);
    letter-spacing: -0.01em;
    color: var(--text-tertiary);
  }

  h4 {
    font-weight: 700;
    font-size: 22.78px;
    line-height: var(--heading-line-height-tight);
    color: var(--text-tertiary);
  }

  h5 {
    font-weight: 600;
    font-size: 20.25px;
    line-height: var(--heading-line-height-tight);
    color: var(--text-tertiary);
  }

  h6 {
    font-weight: 600;
    font-size: 18px;
    line-height: var(--heading-line-height-tight);
    color: var(--text-tertiary);
  }

  p,
  label,
  input,
  textarea {
    font-size: 16px;
    font-weight: 400;
    color: var(--foreground);
    line-height: 1.5;
  }

  button {
    font-size: 18px;
    font-weight: 600;
  }

  .subheading-h3 {
    font-size: var(--heading-h3-size);
    font-weight: var(--heading-h2-weight);
    line-height: var(--heading-line-height-tight);
    color: var(--text-tertiary);
  }

  .caption {
    font-size: 16px !important;
    color: var(--neu-text-tertiary) !important;
  }

  .footer-terms-text,
  .footer-copyright-text {
    font-size: 0.875rem;
  }

  /* SM breakpoint (min-width: 640px) */
  @media (min-width: 640px) {
    p,
    label,
    input,
    textarea {
      font-size: 18px;
    }
  }

  /* MD breakpoint (min-width: 768px) */
  @media (min-width: 768px) {
    p,
    label,
    input,
    textarea {
      font-size: 20.25px;
    }
  }

  /* LG breakpoint (min-width: 1024px) */
  @media (min-width: 1024px) {
    p,
    label,
    input,
    textarea {
      font-size: 22.78px;
    }
  }

  /* XL breakpoint (min-width: 1280px) */
  @media (min-width: 1280px) {
    p,
    label,
    input,
    textarea {
      font-size: 25.63px;
    }
  }
}

/* ============================================
   Neumorphism (Soft UI)
   ============================================ */

/* Main Card - Large Floating 3D */
.neuro-card-main {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised-strong), var(--shadow-inset-strong),
    var(--shadow-highlight);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.neuro-card-main:not(.hero-card):hover {
  box-shadow: var(--shadow-raised-emphasis), var(--shadow-inset-strong),
    var(--shadow-highlight);
  transform: translateY(-2px);
}

/* Secondary Card - Medium Raised 3D */
.neuro-card-secondary {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-inset), var(--shadow-highlight);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.neuro-card-secondary:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-inset-hover),
    var(--shadow-highlight);
  transform: translateY(-1px);
}

/* Floating Card - Extra Depth for Logo/Special Elements */
.neuro-card-floating {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised-emphasis), var(--shadow-inset-strong),
    var(--shadow-highlight);
  border: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}
.neuro-card-floating:hover {
  box-shadow: var(--shadow-raised-emphasis), var(--shadow-inset-strong),
    var(--shadow-highlight);
  transform: translateY(-4px) scale(1.01);
}

/* Icon Circle - 3D Round Button */
.neuro-icon {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-inset);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.neuro-icon:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-inset-hover);
  transform: translateY(-2px) scale(1.05);
}

/* Button Primary - Raised with Press Effect */
.neuro-button {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-highlight);
  border: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: var(--neu-text-secondary);
}
.neuro-button:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-highlight);
  transform: translateY(-2px);
}
.neuro-button:active {
  box-shadow: var(--shadow-inset-pressed);
  transform: scale(0.97) translateY(2px);
}

/* Button Secondary - Outline style */
.neuro-button-secondary {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-highlight);
  border: 1px solid
    color-mix(in srgb, var(--neu-text-secondary) 25%, transparent);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: var(--neu-text-primary);
}
.neuro-button-secondary:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-highlight);
  transform: translateY(-1px);
}
.neuro-button-secondary:active {
  box-shadow: var(--shadow-inset-pressed);
  transform: scale(0.98) translateY(1px);
}

/* Home hero layout refinements */
.home-hero-card {
  display: grid;
  gap: clamp(0.75rem, 1.8vw, 1.2rem);
  justify-items: center;
  text-align: center;
  border-radius: clamp(26px, 6vw, 32px);
}

.home-hero-icon {
  width: clamp(80px, 16vw, 110px);
  height: clamp(80px, 16vw, 110px);
  margin-inline: auto;
  display: grid;
  place-items: center;
  font-size: clamp(36px, 8vw, 48px);
  color: var(--neu-accent);
}

.home-hero-title {
  margin: 0;
  font-weight: 800;
  letter-spacing: -0.02em;
  color: var(--text-secondary);
  font-size: clamp(28px, 5.2vw, 42px);
}

.home-hero-title-accent {
  color: var(--neu-accent);
}

.home-hero-description {
  margin: 0;
  color: var(--text-secondary);
  font-size: clamp(14px, 2.5vw, 18px);
}

.home-hero-primary {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-width: clamp(220px, 40vw, 260px);
  padding: 1rem 1.25rem;
  border-radius: 20px;
  font-weight: 600;
  margin-inline: auto;
  color: var(--accent-foreground);
}

.home-hero-secondary {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  min-width: clamp(220px, 40vw, 260px);
  padding: 0.85rem 1.25rem;
  border-radius: 18px;
  font-weight: 600;
  margin-inline: auto;
}

.home-hero-legal {
  margin: 0.5rem 0 0;
  color: var(--text-tertiary);
  font-size: clamp(12px, 2vw, 14px);
  text-align: center;
}

.home-hero-legal a {
  color: inherit;
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 4px;
}

/* Input - Inset/Pressed Style */
.neuro-input {
  background-color: var(--neu-card);
  box-shadow: inset 8px 8px 16px rgba(159, 133, 114, 0.12),
    inset -8px -8px 16px rgba(255, 255, 255, 0.85),
    1px 1px 3px rgba(159, 133, 114, 0.05);
  border: 0;
  transition: all 0.3s ease;
  color: var(--neu-text-primary);
}
.neuro-input:focus {
  box-shadow: inset 10px 10px 20px rgba(159, 133, 114, 0.15),
    inset -10px -10px 20px rgba(255, 255, 255, 0.9),
    0 0 0 3px rgba(135, 103, 79, 0.1);
  outline: none;
}
.neuro-input::placeholder {
  color: var(--neu-text-tertiary);
  opacity: 0.6;
}

/* Inset Card - Pressed/Sunken Style */
.neuro-card-inset {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-inset-strong), var(--shadow-highlight);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.neuro-card-inset:hover {
  box-shadow: var(--shadow-inset-hover), var(--shadow-highlight);
}

/* Legacy Glass Classes (compat) */
.glass-card-main {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised-strong), var(--shadow-inset-strong),
    var(--shadow-highlight);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.glass-card-main:hover {
  box-shadow: var(--shadow-raised-emphasis), var(--shadow-inset-strong),
    var(--shadow-highlight);
  transform: translateY(-2px);
}
.glass-card-secondary {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-inset), var(--shadow-highlight);
  border: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.glass-card-secondary:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-inset-hover),
    var(--shadow-highlight);
  transform: translateY(-1px);
}

/* ============================================
   Layout & Spacing Utilities
   ============================================ */

.page-bg {
  background-color: transparent;
  background-image: none;
}

.app-shell {
  min-height: 100dvh;
  display: flex;
  flex-direction: column;
  position: relative;
  isolation: isolate;
  padding-top: 0;
  padding-bottom: 0;
  padding-left: calc(
    env(safe-area-inset-left) + clamp(var(--space-2), 4vw, var(--space-4))
  );
  padding-right: calc(
    env(safe-area-inset-right) + clamp(var(--space-2), 4vw, var(--space-4))
  );
  overflow: visible;
  background-color: transparent;
  background-image: none;
}

.app-shell[data-route="/terms"],
.app-shell[data-route="/privacy"] {
  padding-left: max(env(safe-area-inset-left), 0px);
  padding-right: max(env(safe-area-inset-right), 0px);
}

.app-shell--full-bleed {
  padding-left: max(env(safe-area-inset-left), 0px);
  padding-right: max(env(safe-area-inset-right), 0px);
}

.top-attached-nav {
  padding-top: var(--page-shell-padding-top);
  background-color: transparent;
  background-image: none;
  box-shadow: none;
}

.app-main {
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  --page-shell-padding-top: calc(
    var(--header-height) + env(safe-area-inset-top)
  );
  padding-top: var(--page-shell-padding-top);
  padding-left: env(safe-area-inset-left);
  padding-right: env(safe-area-inset-right);
  padding-bottom: calc(var(--space-4) + env(safe-area-inset-bottom));
  min-height: calc(
    100dvh - var(--header-height) - env(safe-area-inset-top) -
      env(safe-area-inset-bottom)
  );
  --page-shell-content-gap-top: clamp(0.75rem, 2.5vw, 2rem);
  --page-shell-content-gap-bottom: clamp(1.5rem, 5vh, 4rem);
  --page-shell-content-gap-inline: clamp(1rem, 4vw, 2.5rem);
  background-color: transparent;
  background-image: none;
}

@media (min-width: 640px) {
  .app-main {
    padding-bottom: calc(200px + env(safe-area-inset-bottom));
  }
}

@media (min-width: 1024px) {
  .app-main {
    padding-bottom: calc(220px + env(safe-area-inset-bottom));
  }
}

.app-main--spacious {
  padding-bottom: calc(env(safe-area-inset-bottom) + 16px);
}

.app-main--floating-nav {
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
}

/* Remove vertical offsets when header/footer intentionally hidden */
.app-main--no-header {
  padding-top: calc(env(safe-area-inset-top));
  --page-shell-padding-top: calc(env(safe-area-inset-top));
}
.app-main--no-footer {
  padding-bottom: calc(env(safe-area-inset-bottom));
}

@media (min-width: 640px) {
  .app-main--floating-nav {
    padding-bottom: calc(160px + env(safe-area-inset-bottom));
  }
}

@media (min-width: 1024px) {
  .app-main--floating-nav {
    padding-bottom: calc(180px + env(safe-area-inset-bottom));
  }
}

/* Container - Centered with Max Width */
.neuro-container {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}
@media (min-width: 640px) {
  .neuro-container {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }
}
@media (min-width: 1024px) {
  .neuro-container {
    padding-left: 2rem;
    padding-right: 2rem;
  }
}

/* Ensure that the main sections cover the full viewport height */
.section-full {
  height: 100vh;
  overflow: hidden;
}

/* Class to disable vertical scrolling on specific pages (apply on body or main container) */
.no-scroll {
  overflow: hidden !important;
}

/* Safe area handling for mobile devices */
html {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

body {
  scroll-behavior: smooth;
}

/* Navigation buttons styling for calculator and result pages */
.nav-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
  background-color: var(--neu-card);
  z-index: 1000;
}

/* Consistent typography: center align all headings */
h1,
h2,
h3,
h4,
h5,
h6 {
  text-align: center;
  margin: 0.5rem 0;
}

/* Ensure footer attaches cleanly with no extra margin*/
footer {
  margin: 0;
  padding: 0;
}

/* ============================================
   PDF Rendering Mode Overrides
   ============================================ */
@layer base {
  /* Force RGB colors (avoid oklab) */
  body.pdf-rendering p,
  body.pdf-rendering span,
  body.pdf-rendering div:not([class*="badge"]):not([class*="alert"]) {
    color: rgb(71, 59, 49) !important;
  }
}

/* ============================================
   Utilities (custom)
   ============================================ */
@layer utilities {
  .rtl {
    direction: rtl;
  }
  .ltr {
    direction: ltr;
  }

  /* Text Shadows */
  .text-shadow-sm {
    text-shadow: var(--lift-text-shadow);
  }
  .text-shadow-md {
    text-shadow: var(--lift-text-shadow-md);
  }
  .text-shadow-lg {
    text-shadow: var(--lift-text-shadow-lg);
  }

  .pb-safe-bottom {
    padding-bottom: max(env(safe-area-inset-bottom), 12px);
  }

  .floating-nav {
    margin: 0 auto;
    max-width: min(420px, calc(100% - 24px));
    padding-top: 12px;
    padding-bottom: max(env(safe-area-inset-bottom), 12px);
    background-color: var(--header-surface);
    box-shadow: var(--shadow-overlay), var(--shadow-highlight);
    border-radius: 24px 24px 0 0;
  }

  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  @keyframes pulse-subtle {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02);
    }
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-200%);
    }
    100% {
      transform: translateX(200%);
    }
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 3s ease-in-out infinite;
  }

  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }

  .hero-shell [data-hero-group] {
    transition: none;
    width: var(--primary-card-width);
    max-width: var(--primary-card-width);
    margin-inline: auto;
    box-sizing: border-box;
    padding-inline: var(--primary-card-gutter);
    padding-block: var(--primary-card-padding-block);
  }
}

/* Buttons - Dark Mode */
[data-theme="dark"] .neuro-button {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-raised), var(--shadow-highlight);
  color: var(--neu-text-primary);
}

[data-theme="dark"] .neuro-button:hover {
  box-shadow: var(--shadow-raised-hover), var(--shadow-highlight);
  transform: translateY(-2px);
}

[data-theme="dark"] .neuro-button:active {
  box-shadow: var(--shadow-inset-pressed);
  transform: scale(0.97) translateY(2px);
}

/* Input Fields - Dark Mode */
[data-theme="dark"] .neuro-card-inset,
[data-theme="dark"] input[type="text"],
[data-theme="dark"] input[type="email"],
[data-theme="dark"] input[type="date"],
[data-theme="dark"] input[type="number"],
[data-theme="dark"] textarea {
  background-color: var(--neu-card);
  box-shadow: var(--shadow-inset-strong);
  color: var(--neu-text-primary);
}

[data-theme="dark"] .neuro-card-inset::placeholder,
[data-theme="dark"] input::placeholder,
[data-theme="dark"] textarea::placeholder {
  color: color-mix(in srgb, var(--neu-text-primary) 50%, transparent);
}

/* Page Background - Dark Mode */
/* Page Background - Dark Mode */
[data-theme="dark"] .page-bg {
  background-color: transparent;
}
[data-cookie-banner="home"] [data-cookie-element="header"] {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

[data-theme="dark"] body {
  background-color: var(--background);
  color: var(--neu-text-primary);
}

/* ==========================
   Animations (from design)
   ========================== */
@keyframes slide-up {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
    --shadow-overlay-sm: 0 6px 16px
      color-mix(in srgb, var(--shadow-dark) 55%, transparent);
    --shadow-overlay: 0 12px 28px
      color-mix(in srgb, var(--shadow-dark) 70%, transparent);
  }
}
.animate-slide-up {
  animation: slide-up 0.5s ease-out forwards;
}

@keyframes scale-in {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}
.animate-scale-in {
  animation: scale-in 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.animate-fade-in {
  animation: fade-in 0.3s ease-out forwards;
}
