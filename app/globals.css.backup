  --border: rgba(240, 217, 181, 0.18);
  --input: transparent;
  --input-background: var(--card);
  --switch-background: var(--card);
  --ring: var(--neu-accent-light);

  --text-primary: var(--neu-text-primary);
  --text-secondary: var(--neu-text-secondary);
  --text-tertiary: var(--neu-text-tertiary);
  --text-quaternary: var(--neu-text-quaternary);
  --heading-h1-color: var(--neu-text-primary);
  --heading-h2-color: var(--neu-text-primary);
  --heading-h3-color: var(--neu-text-primary);
  --heading-subtitle-color: color-mix(
    in srgb,
    var(--neu-gold-signature) 68%,
    var(--neu-text-secondary)
  );
  --paragraph-color: var(--neu-text-secondary);
  --caption-color: var(--neu-text-tertiary);

  --shadow-light: var(--neu-shadow-light);
  --shadow-dark: var(--neu-shadow-dark);

  --brown-dark: var(--neu-text-primary);
  --brown-heading: var(--neu-text-secondary);
  --brown-bronze: var(--neu-text-tertiary);
  --brown-neutral: var(--neu-text-quaternary);
  --sand-light: rgba(55, 65, 70, 0.5);
  --sand-lighter: rgba(90, 98, 102, 0.35);
